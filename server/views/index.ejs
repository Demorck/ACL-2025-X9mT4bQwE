<% 
    let colors = ["red", "blue", "amber", "lime", "emerald", "cyan", "violet", "purple", "pink", "rose"];
    const random_color = colors[Math.floor(Math.random() * colors.length)];
%>

<div class="container mx-auto max-w-3xl text-center py-16 text-stone-200">
  <h1 class="text-4xl font-bold mb-4">Bienvenue sur <span class="text-<%= random_color %>-400">Mon SUPER Agenda (trop slaaay)</span></h1>
  <p class="text-stone-400 text-lg mb-10">
    P'tit projet sympathique. (voilà)
  </p>

  <% if (!user) { %>
    <div class="flex justify-center gap-4">
      <a href="/login" class="px-5 py-2 bg-blue-600 rounded hover:bg-blue-500 font-medium">Connexion</a>
      <a href="/register" class="px-5 py-2 bg-green-600 rounded hover:bg-green-500 font-medium">Inscription</a>
    </div>
  <% } else { %>
    <div class="space-y-4">
      <p class="text-lg font-medium">Bonjour, <%= user.username %></p>
      <div class="flex justify-center gap-4">
        <a href="/calendar/week" class="px-5 py-2 bg-<%= random_color %>-500 rounded hover:bg-<%= random_color %>-400 font-medium">Voir mes agendas</a>
        <a href="/logout" class="px-5 py-2 bg-red-600 rounded hover:bg-red-500 font-medium">Se déconnecter</a>
      </div>
    </div>
  <% } %>
</div>
