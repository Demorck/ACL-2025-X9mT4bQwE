<% layout("template/layout"); %>
<div class="w-3/4 h-fit mx-auto p-6 mt-4 inner-container rounded-xl">
  <h1 class="text-2xl font-bold mb-4">Mes notifications</h1>

  <div class="flex gap-4 mb-4">
    <div data-mark-all-seen class="px-3 py-2 bg-green-600 rounded hover:bg-green-700 cursor-pointer">
      Marquer comme lues
    </div>
    <div data-delete-all class="px-3 py-2 bg-green-600 rounded hover:bg-green-700 cursor-pointer">
      Supprimer les notifications
    </div>
  </div>


  <% if (notifications.length === 0) { %>
    <p class="text-gray-400">Aucune notification</p>
  <% } else {
   %>
    <ul class="space-y-2">
      <% notifications.forEach(n => { %>
      <% const concerneEqualConnecte = n.user_concerned && n.user_concerned._id.toString() == user._id.toString() %>
        <li class="p-3 rounded  flex justify-between items-center group">
          <span>
            <% const userText = n.user_concerned ? (concerneEqualConnecte ? "vous" : n.user_concerned.username) : "un utilisateur"; %>
            <% const userTextSujet = n.user_concerned ? (concerneEqualConnecte ? "Vous avez" : `${n.user_concerned.username} a`) : "Quelqu'un a"; %>
            <% if (n.type === 0) { %>
              L'agenda <b><%= n.nom || "?" %></b> a été créé par <b> <%= userText %> </b>.
            <% } else if (n.type === 1) { %>
              Le nouveau rendez-vous <b><%= n.nom || "?" %></b> a été créé par <b> <%= userText %> </b>.
            <% } else if (n.type === 2) { %>
              Le rendez-vous <b><%= n.nom || "?" %></b> a été modifié par <b> <%= userText %></b>.
            <% } else if (n.type === 3) { %>
              Le rendez-vous <b><%= n.nom || "?" %></b> a été supprimé par <b> <%= userText %></b>.
            <% } else if (n.type === 4) { %>
             <b> <%= userTextSujet %>  </b> été ajouté à l'agenda partagé <b><%= n.nom || "?" %></b>.
            <% } else if (n.type === 5) { %>
             <b> <%= userTextSujet %> </b> été retiré de l'agenda partagé <b><%= n.nom || "?" %></b>.
            <% } %>
          </span>
          <div>
            <div class="hidden group-hover:inline-flex gap-4">
              <div data-mark-seen="<%= n.id %>" class="rounded hover:opacity-20 cursor-pointer">
                <i class="fa fa-eye"></i> 
              </div>
              <div data-delete-notification="<%= n.id %>" class="rounded hover:opacity-20 cursor-pointer">
                <i class="fa fa-trash"></i> 
              </div>
            </div>
            <% if (!n.seen) { %>
              <span class="text-xs text-red-400 font-semibold">Non lu</span>
            <% } %>
        </li>
      <% }) %>
    </ul>
  <% } %>
</div>
<div id="toastContainer" class="fixed bottom-5 right-5 z-50 flex flex-col gap-3 items-end"></div>

<script>
const toastContainer = document.getElementById('toastContainer');

function creerToast(message, type = 'info') {
  const toast = document.createElement('div');
  toast.className = 'toast opacity-0 transition-opacity duration-300 bg-white border border-gray-200 shadow-lg rounded-lg p-4 flex items-start w-72';
  const iconClass = type === 'success' ? 'fa-solid fa-circle-check text-green-500' : 'fa-regular fa-circle-dot text-blue-500';
  toast.innerHTML = `
    <i class="${iconClass} w-5 h-5 mt-1 flex-shrink-0"></i>
    <div class="ml-3 flex-1">
      <p class="text-sm font-medium text-gray-900">Notification</p>
      <p class="text-sm text-gray-500 mt-1">${message}</p>
    </div>
    <button class="ml-4 text-gray-400 hover:text-gray-500 focus:outline-none">
      <i class="fa-solid fa-xmark text-blue-500"></i>
    </button>
  `;
  toast.querySelector('button').addEventListener('click', () => supprimerToast(toast));

  // Ajout dans le container, sans supprimer les autres toasts (mais marche pas parce que ca refresh la page)
  toastContainer.appendChild(toast);

  requestAnimationFrame(() => {
    toast.classList.remove('opacity-0');
    toast.classList.add('opacity-100');
  });

  // Le toast disparait au bout de 3 secondes 
  setTimeout(() => supprimerToast(toast), 3000);
}

function supprimerToast(toast) {
  toast.classList.remove('opacity-100');
  toast.classList.add('opacity-0');
  setTimeout(() => toast.remove(), 300);
}

// Met dans localStorage que la notif viens d'arriver pour pouvoir l'afficher meme si la page est refresh 
function EtatToast(message, type) {
  localStorage.setItem('toastMessage', message);
  localStorage.setItem('toastType', type);
}


// Bouton qui affiche le toast des notifications lu
document.getElementById('luNotification').addEventListener('click', function() {
  EtatToast("Toutes les notifications sont marquées comme lues", "success");
});

// Bouton qui affiche le toast des notifications supprimées
document.getElementById('supprNotification').addEventListener('click', function() {
  EtatToast("Toutes les notifications ont été supprimées", "info");
});

// Permet d'afficher le toast après le chargement de la page (sinon il disparait dès qu'on appuie sur le bouton vu que ca refresh la page)
document.addEventListener('DOMContentLoaded', function() {
  const message1 = localStorage.getItem('toastMessage');
  const type1 = localStorage.getItem('toastType');

  if (message1) {
    creerToast(message1, type1);
    localStorage.removeItem('toastMessage');
    localStorage.removeItem('toastType');
  }
});
</script>