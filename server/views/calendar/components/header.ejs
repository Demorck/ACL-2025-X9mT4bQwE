<div class="flex items-center justify-between py-2 px-4 border-b calendar-header">
    <div class="flex items-center gap-2">
        <div class="px-2 py-1 calendar-header-button rounded cursor-pointer"  data-action="agendas-filter">
            <span class="fa fa-angle-double-left "></span>
        </div>
    </div>
    <div class="flex items-center justify-center gap-2">
        <span class="font-semibold text-center"><%= title %></span>
    </div>
    <div class="flex items-stretch md:items-center justify-between gap-2">
        <div class="flex items-center">
            <a href="<%= previous_url %>" class="font-semibold px-2 py-1 calendar-header-button rounded-l-sm">
                <div>&lt;</div>
            </a>
            <a href="/calendar/day" class="font-semibold px-2 py-1 calendar-header-button">
                <span >Aujourd'hui</span>
            </a>
            <a href="<%= after_url %>" class="font-semibold px-2 py-1 calendar-header-button rounded-r-sm">
                <div>&gt;</div>
            </a>
        </div>
        <a href="/calendar/day">
            <div class="px-3 py-1 calendar-header-button<%= view == "day" ? "--active" : "" %> rounded">Jour</div>
        </a>
        <a href="/calendar/week">
            <div class="px-3 py-1 calendar-header-button<%= view == "week" ? "--active" : "" %> rounded">Semaine</div>
        </a>
        <a href="/calendar/month">
            <div class="px-3 py-1 calendar-header-button<%= view == "month" ? "--active" : "" %> rounded">Mois</div>
        </a>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        let select = document.querySelector("#view-select");

        select.addEventListener("change", (event) => {
            location.href = "/calendar/" + event.target.value;        
        })
    })

</script>