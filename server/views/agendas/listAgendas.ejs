<div class="container mx-auto max-w-4xl px-4 py-6">
  <h1 class="text-2xl font-bold mb-4">Mes agendas</h1>

  <% if (agendas && agendas.length) { %>
    <div class="space-y-2">
      <% agendas.forEach(a => { %>
        <div class="flex items-center justify-between bg-stone-800 rounded-xl px-4 py-3">
          <div>
            <p class="font-semibold"><%= a.titre %></p>
            <% if (a.description) { %>
              <p class="text-sm text-stone-300"><%= a.description %></p>
            <% } %>
          </div>
          <div class="flex gap-2">
            <a href="/agendas/edit"
               class="px-3 py-1 rounded bg-amber-500 text-sm hover:bg-amber-400">
              Modifier
            </a>
            <form action="/agendas/delete/" method="POST"
                  onsubmit="return confirm('Supprimer cet agenda ?');">
              <button type="submit"
                      class="px-3 py-1 rounded bg-red-500 text-sm hover:bg-red-400">
                Supprimer
              </button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p class="text-stone-200">Aucun agenda pour le moment.</p>
  <% } %>
</div>
