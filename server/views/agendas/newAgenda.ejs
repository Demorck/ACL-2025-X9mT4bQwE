<% layout("template/layout"); %>
<div class=" h-fit my-16 bg-stone-800 mx-auto max-w-md p-6 shadow rounded-xl">

    <div class="flex items-center justify-between mb-6">
        <a href="/calendar/week" class="px-3 py-2 bg-stone-700 rounded hover:bg-stone-600">Retour</a>
        <h1 class="text-2xl font-bold">Cr√©er un nouvel agenda</h1>
    </div>

    <div class="text-center font-semibold ">
        <form method="POST" action="/agendas/add">

            <div class="flex items-center justify-between mb-6">
                    <label class="flex-1 font-semibold mb-1 md-4" for="nom">Nom de l'agenda</label>
                    <input id="nom" type="text" name="nom" placeholder="Nom" required class="border px-3 py-2 rounded">
            </div>

            <div class="flex items-center justify-between mb-6">
                    <label class="flex-1 font-semibold mb-1 md-4" for="description">Description de l'agenda</label>
                    <input id="description" type="text" name="description" placeholder="Description..." class="border px-3 py-2 rounded">
            </div>

            <div class="flex items-center justify-between mb-6">
                <label class="flex-1 font-semibold mb-1 md-4" for="couleur">Couleur de l'agenda</label>
                <div class="relative">
                    <select id="couleur" name="couleur" class="appearance-none border px-3 py-2 rounded bg-stone-700 text-stone-100 pr-8">
                        <option value="red" data-color="bg-red-600">Rouge</option>
                        <option value="green" data-color="bg-green-600">Vert</option>
                        <option value="blue" data-color="bg-blue-600">Bleu</option>
                        <option value="yellow" data-color="bg-yellow-500">Jaune</option>
                        <option value="purple" data-color="bg-purple-600">Violet</option>
                        <option value="orange" data-color="bg-orange-600">Orange</option>
                        <option value="pink" data-color="bg-pink-600">Rose</option>
                        <option value="gray" data-color="bg-gray-600">Gris</option>
                    </select>

                    <div id="color-preview" class="absolute right-2 top-1/2 -translate-y-1/2 w-5 h-5 rounded-full border border-stone-400"></div>
                </div>
            </div>


               


            <input type="submit" value="Ajouter" class="px-3 py-2 bg-green-600 rounded hover:bg-green-700 hover:cursor-pointer">
        </form>
    </div>

</div>


<script>
    const select = document.getElementById('couleur');
    const preview = document.getElementById('color-preview');

    function updateColorPreview() {
        const selected = select.options[select.selectedIndex];
        const colorClass = selected.dataset.color;
        preview.className = `absolute right-2 top-1/2 -translate-y-1/2 w-5 h-5 rounded-full border border-stone-400 ${colorClass}`;
    }

    select.addEventListener('change', updateColorPreview);
    updateColorPreview();
</script>