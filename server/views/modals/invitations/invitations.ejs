<% layout("modals/template"); %>

<div class="flex flex-col md:flex-row gap-8 text-left items-stretch">
    <% if(niveau >= 3) { %>
    <!-- PARTIE GAUCHE : LIENS D'INVITATION -->
    <div class="w-full md:flex-[2] flex flex-col">
        <div class="flex justify-between items-center mb-2">
            <h3 class="text-xl font-semibold">Liens d'invitation</h3>
            
            <button 
                onclick="
                    fetch('/invitation/<%= agenda._id %>/create')
                    .then(res => res.text())
                    .then(html => {
                        const closeBtn = document.querySelector('[data-close-modal]');
                        const modalContainer = closeBtn ? closeBtn.parentElement.parentElement : document.querySelector('.modal-content');
                        if (modalContainer) modalContainer.innerHTML = html;
                    })
                "
                class="px-3 py-2 bg-blue-600 hover:bg-blue-700 rounded text-sm font-semibold transition-colors cursor-pointer"
            >
                + Nouveau
            </button>
        </div>

        <div class="overflow-x-auto rounded border border-stone-600 flex-1 bg-stone-700">
            <table class="w-full text-left">
                <thead class="bg-stone-800 text-stone-200 uppercase text-xs sticky top-0">
                    <tr>
                        <th class="px-4 py-3">Lien</th>
                        <th class="px-4 py-3 text-center">Util.</th>
                        <th class="px-4 py-3 text-center">Expiration</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-stone-600 text-sm">
                    <% if (typeof invitations !== 'undefined' && invitations.length > 0) { %>
                        <% invitations.forEach(l => { %>
                            <!-- Le TR reste cliquable pour l'édition -->
                            <tr class="hover:bg-stone-600 transition-colors cursor-pointer"
                                onclick="
                                    fetch('/invitation/<%= l._id %>/edit/')
                                    .then(res => res.text())
                                    .then(html => {
                                        const closeBtn = document.querySelector('[data-close-modal]');
                                        const modalContainer = closeBtn ? closeBtn.parentElement.parentElement : document.querySelector('.modal-content');
                                        if (modalContainer) modalContainer.innerHTML = html;
                                    })
                                ">
                                
                                <!-- Modification ici : Bouton spécifique pour copier -->
                                <td class="px-4 py-3 font-mono">
                                    <div class="flex items-center gap-3">
                                        <span class="text-stone-300 truncate max-w-[150px]">...<%= l._id.toString().slice(-6) %></span>
                                        
                                        <button  
                                            type="button"
                                            class="p-1.5 bg-stone-800 hover:bg-stone-500 rounded border border-stone-600 text-stone-300 transition-colors group relative"
                                            title="Copier le lien"
                                            onclick="
                                                event.stopPropagation(); // Empêche d'ouvrir l'édition
                                                const url = window.location.origin + '/invitation/<%= l._id %>';
                                                navigator.clipboard.writeText(url);
                                                
                                                // Feedback visuel
                                                const msg = this.nextElementSibling;
                                                msg.textContent = 'Copié !';
                                                setTimeout(() => { msg.textContent = '' }, 2000);
                                            "
                                        >
                                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                                            </svg>
                                            
                                            <!-- Tooltip / Message de confirmation -->
                                            <span class="copymsg absolute left-full ml-2 top-1/2 -translate-y-1/2 text-green-400 text-xs font-bold whitespace-nowrap pointer-events-none"></span>
                                        </button>
                                    </div>
                                </td>

                                <td class="px-4 py-3 text-center whitespace-nowrap">
                                    <%= l.nbUtilisation %> / <%= l.utilisationsMax ? l.utilisationsMax : '∞' %>
                                </td>

                                <td class="px-4 py-3 text-center whitespace-nowrap text-stone-300">
                                    <%= l.dateExpiration ? new Date(l.dateExpiration).toLocaleDateString("fr-FR") : '-' %>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="3" class="px-4 py-6 text-center text-stone-400 italic text-xs">
                                Pas de liens actifs.
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <% } %>
    <!-- PARTIE DROITE : MEMBRES -->
    <div class="w-full md:flex-1 flex flex-col">
        <h3 class="text-xl font-semibold mb-3 h-[42px] flex items-center">Membres (<%= invites.length %>)</h3>
        
        <div class="bg-stone-800 rounded border border-stone-600 p-2 h-full overflow-y-auto">
            <% if (invites && invites.length > 0) { %>
                <ul class="space-y-2">
                    <% invites.forEach(u => { %>
                        <li class="bg-stone-700 p-2 rounded flex justify-between items-center text-sm">
                            <span class="font-semibold truncate mr-2"><%= u.user.username %></span>
                            <% if(niveau >= 3) { %>
                            <form action="/invitation/<%= agenda._id %>/remove/<%= u._id %>" method="GET">
                                <button type="submit" class="text-red-400 hover:text-red-200 px-2 py-1 rounded hover:bg-stone-600 transition-colors">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                                    </svg>
                                </button>
                            </form>
                            <form action="/invitation/changeRole" method="POST">
                                <input type="hidden" name="userId" value="<%=u.user._id%>">
                                <input type="hidden" name="agendaId" value="<%= agenda._id %>">
                                <select name="role" id="role" class="px-3 py-1 bg-blue-600 hover:bg-blue-700 rounded text-sm" onchange="this.form.submit()" <% if(u.niveau === niveau){ %> disabled <% } %> >
                                    <option value="3" <% if(u.niveau == 3){ %> selected <% } %> >Admin</option>
                                    <option value="2" <% if(u.niveau == 2){ %> selected <% } %> >Member</option>
                                    <option value="1" <% if(u.niveau == 1){ %> selected <% } %> >Viewer</option>
                                </select>
                            <% } %>
                    <input type="submit" value="">
                </form>
                        </li>
                    <% }) %>
                </ul>
            <% } else { %>
                <div class="flex h-full items-center justify-center">
                    <p class="text-stone-400 text-sm italic">Aucun membre invité.</p>
                </div>
            <% } %>
        </div>
    </div>

</div>